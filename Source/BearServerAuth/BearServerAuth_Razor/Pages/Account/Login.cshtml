@page
@model LoginModel

@{
    ViewData["Title"] = "Вход"; 
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="Login" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="m_viewModel.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="m_viewModel.Email" class="form-label">Эл.почта</label>
                    <span asp-validation-for="m_viewModel.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="m_viewModel.Password" class="form-control" autocomplete="current-password" aria-required="true" type="password" />
                    <label asp-for="m_viewModel.Password" class="form-label">Пароль</label>
                    <span asp-validation-for="m_viewModel.Password" class="text-danger"></span>
                </div>
                @* <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div> *@
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Войти</button>
                </div>
                @* <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Забыли пароль?</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Повторно отправить подтверждение по электронной почте</a>
                    </p>
                </div> *@
            </form>
        </section>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
